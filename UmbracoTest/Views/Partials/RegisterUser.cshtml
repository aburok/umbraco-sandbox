@using UmbracoTest.Controllers
@inherits UmbracoViewPage<UmbracoTest.ViewModels.RegisterUserViewModel>

@{
    ViewBag.Title = "Membership Registration Before refactor";
}

<h2>Membership Registration</h2>

@using (Html.BeginUmbracoForm<RegisterUserController>(
                "MemberRegister",
                FormMethod.Post,
                new { @class = "validate-form" }))
{
    <fieldset class="form-group">
        <label>
            @Html.DisplayNameFor(m => m.UserName)
        </label>
        @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.UserName,
                string.Empty, new { @class = "error" })
    </fieldset>

    <fieldset class="form-group">
        <label>
            @Html.DisplayNameFor(m => m.EmailAddress) <sup>*</sup>
        </label>
        @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.EmailAddress,
            string.Empty, new { @class = "error" })
    </fieldset>

    <fieldset class="form-group">
        <label>
            @Html.DisplayNameFor(m => m.Password) <sup>*</sup>
        </label>
        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Password,
            string.Empty, new { @class = "error" })
    </fieldset>

    <fieldset class="form-group">
        <label>
            @Html.DisplayNameFor(m => m.PasswordConfirmation) <sup>*</sup>
        </label>
        @Html.EditorFor(m => m.PasswordConfirmation, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.PasswordConfirmation,
            string.Empty, new { @class = "error" })
    </fieldset>
}
